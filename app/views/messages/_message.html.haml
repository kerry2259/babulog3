.contents
  .header
    .header__left
      .header__left__logo
        = link_to root_path do
          %label
            = icon("fa", "baby", class: "logo-icon")
      .header__left__name
        %label
          ばぶろぐ
          %p babulog
    .header__right
      .header__right__sub-menu
        %ul.dropdown
          %li
            menu
            %i#arrow.fas.fa-caret-square-up
            %ul.submenu
              %li
                %a{href: "#"} つぶやく
              %li
                %a{href: "#"} 日記
              %li
                %a{href: "#"} 成長記録
              %li
                %a{href: "#"} ショップリンク

  .tweet-content
    .baby
      .baby__image
        画像
      .baby__image__name
        = @baby.name
      .group-user
        メンバーリスト
        .group-user__member
          .group-user__member__name
            - @baby.users.each do |user|
              = user.name

    .messages
      .message
        .message__mask
          .messages__mask__text
            aaaaaaaaaaa
        .message__info
          .message__info__date
            2020-06-10
          .message__info__image
            user-image
      
      .form
        %form.new_message
          .input-box
            = form_for [@baby, @message] do |f|
              = f.label :image, class: "input-box__image" do
                = icon("fa", "grin-alt", class: "image-icon")
                = icon("fa", "camera", class: "image-icon")
              = f.file_field :image, class: "input-box__image__file"
              = f.text_field :content, class: "input-box__text"
            %button{type: "submit", class: "submit-btn"}
              %i.fa.fa-comment-dots