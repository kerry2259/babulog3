.wrapper
  .contents
    .header
      .header__left
        .header__left__logo
          = link_to root_path do
            %label
              = icon("fa", "baby", class: "logo-icon")
        .header__left__name
          %label
            ばぶろぐ
            %p babulog
      .header__right
        .header__right__sub-menu
          %ul.dropdown
            %li
              menu
              %i#arrow.fas.fa-caret-square-up
              %ul.submenu
                %li
                  %a{href: "#"} つぶやく
                %li
                  %a{href: "#"} 日記
                %li
                  %a{href: "#"} 成長記録
                %li
                  %a{href: "#"} ショップリンク

    .user-content
      .user-content__box
        .user-content__box__name
          ユーザー
        .user-content__box__image
          image
      .user-mask
        .user-mask__name
          = current_user.name
        .user-mask__job
          父親/無職
          -# .user-mask__baby__update
          -#   %p 
          -#     成長記録
          -#     %br
          -#     更新
      .user-edit
        = link_to edit_user_path(current_user) do
          = icon('fas', 'cog', class: "edit-btn")

    .add-baby
      = link_to new_baby_path do
        %p 赤ちゃんの新規登録はここをクリック

    .babies
      - current_user.babies.each do |baby|
        .babies__baby-box
          = link_to baby_messages_path(baby) do
            .babies__baby-box__name
              = baby.name
            .babies__baby-box__image
